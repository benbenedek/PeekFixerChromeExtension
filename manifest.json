{
  "name": "Peek Pro Helper",
  "version": "1.3",
  "description": "Simplify your peek pro interface for a better booking experience.",

  "content_scripts": [{
    "js": ["jquery-3.3.1.min.js", "content.js"],
    "matches": ["https://pro-app.peek.com/*"]
  }],

  "browser_action": {
    "default_icon": "images/icon-128.png",
    "default_title": "Click to Book"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "manifest_version": 2
}
